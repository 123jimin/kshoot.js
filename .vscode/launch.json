{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["--no-timeouts", "--colors"],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        }
    ]
}